{
  "name": "rag-dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "api",                       // chính là service api trong docker-compose
  "workspaceFolder": "/app",              // mount code /app từ volume ./api:/app
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.extraPaths": ["/app"]
      }
    }
  }
}
